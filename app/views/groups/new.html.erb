<div class='container'>
  <div class='row'>
    <div class="px-3 mx-auto">
      <h2>Create Group</h2>
      <%= form_with model:@group do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :introduction , class: 'form-control group_induction'  %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :name , class: 'form-control group_name' %>
        </div>

        <div class="form-group">
          <%= f.label :グループ画像 %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Group" , class: 'btn btn-info'%>
        </div>
      <% end %>
    </div>
  </div>
</div>