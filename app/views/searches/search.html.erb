<% if @kind == 'book'%>

<h1>Books search for "<% puts @keyword %>"</h1>
  <% if @books.exists? %>

    <table class="table">
      <thead>
        <tr>
          <td></td>
          <td>Title</td>
          <td>Opinion</td>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50'%></td>
          <td><%= book.title%></td>
          <td><%= book.body%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>一致する投稿は存在しません。</p>


  <% end %>
<% else %>
<h1>Users search for "<% puts @keyword %>"</h1>

  <% if @users.exists? %>
    <table class="table">
      <thead>
        <tr>
          <td></td>
          <td>Name</td>
          <td>Introduction</td>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50'%></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>一致するユーザーは存在しません。</p>

  <% end %>
<% end %>
